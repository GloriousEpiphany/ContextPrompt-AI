{
  "manifest_version": 3,
  "name": "ContextPrompt AI",
  "version": "2.0.0",
  "description": "Capture web context → Generate AI prompts with optional AI-powered summarization. 捕获网页上下文 → 生成智能AI提示词，支持AI增强摘要。",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://chat.qwen.ai/*",
    "https://www.doubao.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-scripts/capture.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://chat.qwen.ai/*",
        "https://www.doubao.com/*"
      ],
      "js": [
        "content-scripts/injector.js"
      ],
      "css": [
        "assets/styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  }
}